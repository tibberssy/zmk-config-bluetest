#include <nordic/nrf52840_qiaa.dtsi>

#include <dt-bindings/led/led.h>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	model = "bluetest";
	compatible = "bluetest";

    chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &cdc_acm_uart;
		zmk,battery = &vbatt;
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
		zmk,underglow = &led_strip;
	};

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <3>;
// | MX1  | MX2  | MX3  | MX4  | MX5  |
// | MX6  | MX7  | MX8  | MX9  | MX10 |

map = <
RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4) 
RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)
RC(2,1)  RC(2,2)  RC(2,3)
        >;
    };
	};


    kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		diode-direction = "row2col";
		row-gpios
			= <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			;
		col-gpios
			= <&gpio0 22 GPIO_ACTIVE_HIGH>
			, <&gpio0 24 GPIO_ACTIVE_HIGH>
			, <&gpio1 15 GPIO_ACTIVE_HIGH>
			, <&gpio0 2 GPIO_ACTIVE_HIGH>
			, <&gpio0 29 GPIO_ACTIVE_HIGH>
			;
	};

	#include <dt-bindings/led/led.h>

	&pinctrl {
		spi3_default: spi3_default {
			group1 {
				psels = <NRF_PSEL(SPIM_MOSI, 1, 13)>;
			};
		};
	
		spi3_sleep: spi3_sleep {
			group1 {
				psels = <NRF_PSEL(SPIM_MOSI, 1, 13)>;
				low-power-enable;
			};
		};
	};
	
	&spi3 {
	  compatible = "nordic,nrf-spim";
	  status = "okay";
	
	  pinctrl-0 = <&spi3_default>;
	  pinctrl-1 = <&spi3_sleep>;
	  pinctrl-names = "default", "sleep";
	
	  led_strip: ws2812@0 {
		compatible = "worldsemi,ws2812-spi";
		label = "WS2812";
	
		/* SPI */
		reg = <0>; /* ignored, but necessary for SPI bindings */
		spi-max-frequency = <4000000>;
	
		/* WS2812 */
		chain-length = <10>; /* number of LEDs */
		spi-one-frame = <0x70>;
		spi-zero-frame = <0x40>;
		color-mapping = <LED_COLOR_ID_GREEN
							  LED_COLOR_ID_RED
							  LED_COLOR_ID_BLUE>;
	  };
	};


	&adc {
		status = "okay";
	};
	
	&gpiote {
		status = "okay";
	};
	
	&gpio0 {
		status = "okay";
	};
	
	&gpio1 {
		status = "okay";
	};

	left_encoder: encoder_left {
		compatible = "alps,ec11";
		label = "LEFT_ENCODER";
		a-gpios = <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		b-gpios = <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		resolution = <4>;
		status = "disabled";
	};
